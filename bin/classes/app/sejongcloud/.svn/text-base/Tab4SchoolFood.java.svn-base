package exam.AndroidFirst;

import java.util.ArrayList;
import java.util.List;

import android.graphics.drawable.Drawable;
import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;
import com.google.android.maps.*;

public class Tab4SchoolFood extends MapActivity{
    private List<Overlay> mapOverlays;
    private Drawable drawable;
    private MapView mapView;
    private MapController mc;
    private HellItemizedOverlay itemizedOverlay;
    private ArrayList<OverlayItem> mapItems;
    
	public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.tab4_map);
        
        mapView = (MapView) findViewById(R.id.mapview);
        mapView.setBuiltInZoomControls(true);  //줌컨트롤을 활성
        
        mc = mapView.getController();
        mc.animateTo(new GeoPoint(37550532,127073911)); // center focus
        mc.setZoom(17);
        mapOverlays = mapView.getOverlays();
        drawable = this.getResources().getDrawable(R.drawable.marker_korea);
        itemizedOverlay = new HellItemizedOverlay(drawable, this);
        mapItems=new ArrayList<OverlayItem>();
        
        mapItems.add(new OverlayItem(new GeoPoint(37551825,127074727), "","우정당"));
        mapItems.add(new OverlayItem(new GeoPoint(37549473,127075065), "","학생식당"));
        mapItems.add(new OverlayItem(new GeoPoint(37549596,127073729), "","군자관 지하 1층"));
        mapItems.add(new OverlayItem(new GeoPoint(37549711,127073616), "","군자관 4층 교직원식당"));
        mapItems.add(new OverlayItem(new GeoPoint(37550255,127073214), "","광개토관 15층 스카이라운지"));
        mapItems.add(new OverlayItem(new GeoPoint(37550851,127073321), "","진관홀 지하 1층"));
        
        //Log.d("items size",""+items.size());
        for(int i=0;i<mapItems.size();i++){
            itemizedOverlay.addOverlay(mapItems.get(i));
        }
        mapOverlays.add(itemizedOverlay);
    }

   @Override
    protected boolean isRouteDisplayed() {
	 return false;
    }
}
