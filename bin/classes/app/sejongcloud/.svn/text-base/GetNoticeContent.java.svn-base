package exam.AndroidFirst;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.URL;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

import android.widget.TextView;

public class GetNoticeContent {
	public static String getNoticeContent(String address){
		String result = null;
		String line;
		
	    try { // notice 
			URL url= new URL(address);
			InputStreamReader mStream=new InputStreamReader(url.openStream(), "EUC-KR");
			BufferedReader input = new BufferedReader(mStream);
			Pattern p1 = Pattern.compile("<td class='k2_td_cont1' colspan='2'>(.*)</td>");

			while((line = input.readLine())!=null){ // ÀÐ¾î¼­ 
				Matcher m1 = p1.matcher(line); // ÄÁÅÙÆ® µû¿È 
			
				if(m1.find()){
					result=m1.group(1);
				}
			}
		} catch (Exception e){;}
	    
		return result;
	}

}
