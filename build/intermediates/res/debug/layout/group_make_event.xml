<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	 <FrameLayout 
 	    android:layout_width="fill_parent"
   	 	android:layout_height="43dip"
   	 	android:background="@drawable/tab_bg_selector"
   	 	android:paddingTop="4dip"
   	 	android:paddingBottom="4dip">
	
   	 	<Button
   	 	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/logo"
	        android:layout_gravity="center|center"
	        android:scaleType="fitXY" 
	        /> 
		<Button
		    android:id="@+id/eventNextButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="0dip"
		    android:layout_gravity="right|center"
		    android:background="@drawable/sort_button_default"
		    android:text="다음"
		    android:textSize="14sp"
		    android:textColor="#ffffffff"
		    android:textStyle="bold" /> 
   	 </FrameLayout>    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="10dip">
	    <EditText
	        android:id="@+id/eventSubject"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:hint="*모임주제"/>
	    <EditText
	        android:id="@+id/eventContent"
	        android:layout_width="fill_parent"
	    	android:layout_height="80dip"
	    	android:hint="*내용"
	    	android:layout_marginTop="4dip"/>
		<TextView
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:text="모집기간"
	    	android:textColor="@color/black"/>
	    <LinearLayout 
	       android:orientation="vertical"
	  	   android:layout_width="fill_parent"
	   	   android:layout_height="1dip"
	   	   android:layout_marginTop="10dip"
	   	   android:layout_marginBottom="10dip"
	   	   android:background="#878787"/>
	    	
        <RadioGroup 
            android:layout_width="fill_parent"        
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:id="@+id/makePeriod">        
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/period1"            
                android:text=" 2주"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/period2"            
                android:text=" 4주"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/period3"            
                android:text=" 2달"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:checked="true"/>
        </RadioGroup>
        
		<TextView
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:text="모집인원"
	    	android:textColor="@color/black"/>
	    <LinearLayout 
	       android:orientation="vertical"
	  	   android:layout_width="fill_parent"
	   	   android:layout_height="1dip"
	   	   android:layout_marginTop="10dip"
	   	   android:layout_marginBottom="10dip"
	   	   android:background="#878787"/>
        <RadioGroup 
            android:layout_width="fill_parent"        
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:id="@+id/makeCount">        
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/count1"            
                android:text=" 5명"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/black"/>
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/count2"            
                android:text=" 15명"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <RadioButton 
                android:layout_width="wrap_content"            
                android:layout_height="wrap_content" 
                android:id="@+id/count3"            
                android:text=" 30명"
                android:layout_weight="1"
                android:textColor="@color/black"/>
        </RadioGroup>
