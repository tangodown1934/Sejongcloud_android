<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#FFFFFF"
	    android:orientation="vertical"
	    android:layout_weight="1"
   	    android:paddingLeft="10dip"
   	    android:paddingRight="10dip">
    <TextView
        android:id="@+id/subject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="no subject"
        android:textColor="#000000"
        android:textSize="17sp"  
   	  	android:layout_marginTop="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"/>
    <LinearLayout 
       android:orientation="vertical"
  	   android:layout_width="fill_parent"
   	   android:layout_height="1dip"
   	   android:layout_marginTop="10dip"
   	   android:layout_marginBottom="10dip"
   	   android:background="#878787"/>
    <LinearLayout 
  	   android:layout_width="fill_parent"
   	   android:layout_height="wrap_content"
   	   android:orientation="horizontal"
   	   android:layout_marginTop="10dip">
   	   <ImageView
   	       android:id="@+id/ownerPicture"
   	       android:src="@drawable/person"
   	       android:layout_width="wrap_content"
   	   	   android:layout_height="wrap_content"/>
   	   <LinearLayout
	       android:orientation="vertical"
	  	   android:layout_width="fill_parent"
	   	   android:layout_height="fill_parent"
		   android:layout_toRightOf="@id/ownerPicture"
   	  	   >
	   <TextView
	       android:text="이름" android:id="@+id/owner_name"
	       android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
	   	   android:gravity="right"
           android:textColor="#000000"
		   />
	   <TextView
	       android:text="이메일" android:id="@+id/owner_email"
	       android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
           android:textColor="#000000"
		   android:gravity="right"/>
	   <TextView
	       android:text="연락처" android:id="@+id/owner_hp"
	       android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
           android:textColor="#000000"
		   android:gravity="right"/>
	   </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:background="#FFFFFF"
   	   android:layout_marginTop="10dip"
        >
    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="no content"
        android:textColor="#000000"
        android:textSize="15sp" />
	</ScrollView>
	
    <LinearLayout 
       android:orientation="vertical"
  	   android:layout_width="fill_parent"
   	   android:layout_height="1dip"
   	   android:layout_marginTop="10dip"
   	   android:layout_marginBottom="10dip"
   	   android:background="#878787"/>
    <ProgressBar
        android:id="@+id/followerCountBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
   	  	android:layout_marginTop="5dip"/>
    <TextView
        android:id="@+id/followerCount"
        android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:text="test"
   	    android:gravity="center"
   	  	android:layout_marginTop="5dip"
        android:textColor="#000000"
   	    />
	</LinearLayout>

	<Button
	    android:id="@+id/followButton"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:layout_gravity="center|bottom"
	    android:background="@drawable/follow_button"
	    android:text="같이하기"
        android:textColor="#FFFFFF" />

</LinearLayout><!-- From: file:/C:/Users/TZ/AndroidstudioProjects/sejongcloud_android/res/layout/group_content.xml -->