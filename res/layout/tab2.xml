<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	 <FrameLayout 
 	    android:layout_width="fill_parent"
   	 	android:layout_height="43dip"
   	 	android:background="@drawable/tab_bg_selector"
   	 	android:paddingTop="4dip"
   	 	android:paddingBottom="4dip">
   	 	<Button
   	 	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/logo"
	        android:layout_gravity="center|center"
	        />
		<Button
		    android:id="@+id/sortButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="0dip"
		    android:layout_gravity="right|center"
		    android:background="@drawable/sort_button"
		    android:text="접기"
		    android:textSize="14sp"
		    android:textColor="#ffffffff"
		    android:textStyle="bold" /> 
	        <!-- 
	     <TextView
	         android:id="@+id/title"
	         android:gravity="center|center"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent"
	         android:textSize="18sp"
	         android:textColor="#ffffffff"
	         android:textStyle="bold"
	         android:text="Sejong Cloud"/> -->
   	 </FrameLayout>
    <LinearLayout 
        android:id="@+id/sortButtons"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
		<Button 
		    android:id="@+id/noticeAll"
		    android:layout_width = "wrap_content" android:layout_height = "fill_parent"
		    android:layout_weight="1"
			android:background="#F6BDD7"
			android:padding="7dip"
			android:text ="전체" android:textSize="11sp"/>
		<Button 
		    android:id="@+id/noticeNew"
		    android:layout_width = "wrap_content" android:layout_height = "fill_parent"
		    android:layout_weight="1"
			android:padding="7dip"
			android:background="#FCC17B"
			android:text ="입학" android:textSize="11sp"/>
		<Button 
		    android:id="@+id/noticeInter"
		    android:layout_width = "wrap_content" android:layout_height = "fill_parent"
		    android:layout_weight="1"
			android:padding="7dip"
			android:background="#FBF7B6"
			android:text ="국제" android:textSize="11sp"/>
		<Button 
		    android:id="@+id/noticeCollege"
		    android:layout_width = "wrap_content" android:layout_height = "fill_parent"
		    android:layout_weight="1"
			android:padding="7dip"
			android:background="#CCFBB6"
			android:text ="학사" android:textSize="11sp"/>
		<Button 
		    android:id="@+id/noticeGradute"
		    android:layout_width = "wrap_content" android:layout_height = "fill_parent"
		    android:layout_weight="1"
			android:padding="7dip"
			android:background="#B6EEFB"
			android:text ="졸업" android:textSize="11sp"/>
	</LinearLayout>
	<ListView
	android:id="@android:id/list"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:drawSelectorOnTop="false"
    android:background="#FFFFFF"
    android:cacheColorHint="#00000000"/>
	<TextView 
	    android:id="@android:id/empty" 
		android:layout_width="fill_parent" 
		android:text="게시물이 없습니다 " 
		android:layout_height="fill_parent"
		android:gravity="center" 
		/>
</LinearLayout>
